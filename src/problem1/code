var sum_to_n_a = function(n) {
    // your code here
    return (n * (n + 1)) / 2;
};

var sum_to_n_b = function(n) {
    // your code here
    var x = 0;
    while (n > 0) {
        x = x + n;
        n--;
    }
    return x;
};

var sum_to_n_c = function(n) {
    // your code here
    if (n == 1) {
        return 1;
    } else {
        return n + sum_to_n_c(n - 1);
    }
};